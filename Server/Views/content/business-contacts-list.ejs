<div class="container">
    <h1>Business Contacts List</h1>

    <div class="row">
        <div class="col">
            <% if(displayName) { %>
                <a href="/business-contacts-list/add" id="addButton" class="btn btn-primary mb-1"><i
                        class="fas fa-plus-circle"></i> Add Business Contact</a>
                <% } %>

                    <table class="table table-striped table-bordered table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Contact Name</th>
                                <th scope="col">Contact Number</th>
                                <th scope="col">E-mail Address</th>
                                <% if(displayName) { %>
                                    <th></th>
                                    <th></th>
                                    <% } %>
                            </tr>
                        </thead>
                        <tbody>
                            <!--Repeating Row-->
                            <% for(let count=0 ; count<contacts.length; count++){ %>

                                <tr>
                                    <th scope="row">
                                        <%= count+1 %>
                                    </th>
                                    <td>
                                        <%= contacts[count].contactName %>
                                    </td>
                                    <td>
                                        <%=contacts[count].contactNumber%>
                                    </td>
                                    <td>
                                        <%=contacts[count].emailAddress%>
                                    </td>
                                    <% if(displayName) { %>
                                        <td class="text-center"><a
                                                href="/business-contacts-list/edit/<%= contacts[count]._id %>"
                                                class="btn btn-primary btn-sm edit"><i class="fas fa-edit fa-sm"></i>
                                                Edit</a></td>
                                        <td class="text-center"><a
                                                href="/business-contacts-list/delete/<%= contacts[count]._id %>"
                                                class="btn btn-danger btn-sm delete"><i
                                                    class="fas fa-trash-alt fa-sm"></i> Delete</a></td>
                                        <% } %>
                                </tr>

                                <% } %>
                        </tbody>
                    </table>
        </div>
    </div>
</div>